---- add your own notifications here Server side
ServerNotify = function(type, text, VORP, source, target)
    -- fail notify
    if type == 1 then  -- no touch
        if source then -- no touch
            VORP.NotifyRightTip(source, text, 5000)
        end
        if target then -- notouch
            VORP.NotifyObjective(target, text, 5000)
        end
    elseif type == 3 then -- MAIL NOTIFY PLAYER GOT MAIL
        if source then
            VORP.NotifyRightTip(source, text, 5000)
        end
    else
        if source then -- notouch
            VORP.NotifyRightTip(source, text, 5000)
        end
        if target then -- notouch
            VORP.NotifyObjective(target, text, 5000)
        end
    end
end


---- CLIENT SIDE notify
ClientNotify = function(type, text, VORP)
    if type == 1 then -- no touch
        VORP.NotifyRightTip(text, 5000)
    else
        VORP.NotifyObjective(text, 5000)
    end
end
